@model List<FacturasDetalle>

<h1 class="text-center text-primary">Listado de Detalles de Facturas</h1>

<table class="mt-5 table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Factura</th>
            <th>Producto</th>
            <th>Servicio</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Total</th>

        </tr>
    </thead>
    <tbody>


        @{
            if (!Model.Any())
            {
                <tr>
                    <td colspan="8" class="bg-info text-center text-dark" > No existen registros </td>
                
                </tr>
            }
            else
            {

                foreach (var detalle in Model)
                {
                    <tr>
                        <td>@detalle.Id</td>
                        <td>@detalle.FacturaId</td>
                        <td>@detalle.ProductoId</td>
                        <td>@detalle.ServicioId</td>
                        <td>@detalle.Cantidad</td>
                        <td>@detalle.PrecioUnitario</td>
                        <td>@detalle.Total</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
