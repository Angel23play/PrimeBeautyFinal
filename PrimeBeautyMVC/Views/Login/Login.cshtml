@model PrimeBeautyMVC.Models.Usuario

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;

}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5 card shadow-sm" style="max-width: 400px;">
    <h2 class="text-center mb-4">Iniciar Sesión</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }

    <form asp-action="Login" method="post" novalidate>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Ingrese su correo electrónico" />
        </div>
        <div class="mb-3">
            <label asp-for="Contrasena" class="form-label"></label>
            <input asp-for="Contrasena" type="password" class="form-control" placeholder="Ingrese su contraseña" />
        </div>

        <a asp-controller="Login" asp-action="Registrar" class="btn btn-link w-100 text-center">
            ¿No tienes cuenta? Regístrate aquí
        </a>

        <button type="submit" class="btn btn-primary w-100">Ingresar</button>
    </form>
</div>
